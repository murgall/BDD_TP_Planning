DROP TABLE IF EXISTS ELEVE ;
CREATE TABLE ELEVE (NomEleve_ELEVE CHAR(30) NOT NULL,
PrenomEleve_ELEVE CHAR(30),
NomGroupe_GROUPE CHAR(30),
PRIMARY KEY (NomEleve_ELEVE)) ENGINE=InnoDB;

DROP TABLE IF EXISTS ENSEIGNANT ;
CREATE TABLE ENSEIGNANT (NomEnseignant_ENSEIGNANT CHAR(20) NOT NULL,
PrenomEnseignant_ENSEIGNANT CHAR(20),
PRIMARY KEY (NomEnseignant_ENSEIGNANT)) ENGINE=InnoDB;

DROP TABLE IF EXISTS MATIERE ;
CREATE TABLE MATIERE (TypeMatiere_MATIERE CHAR(20) NOT NULL,
NomEnseignant_ENSEIGNANT CHAR (20),
PRIMARY KEY (TypeMatiere_MATIERE)) ENGINE=InnoDB;

DROP TABLE IF EXISTS TYPE_COURS ;
CREATE TABLE TYPE_COURS (Type_TYPE_COURS CHAR(20) NOT NULL,
PRIMARY KEY (Type_TYPE_COURS)) ENGINE=InnoDB;

DROP TABLE IF EXISTS TRANCHE_HORAIRE ;
CREATE TABLE TRANCHE_HORAIRE (HeureDebut_TRANCHE_HORAIRE CHAR(5) NOT NULL,
HeureFin_TRANCHE_HORAIRE CHAR(5),
PRIMARY KEY (HeureDebut_TRANCHE_HORAIRE)) ENGINE=InnoDB;

DROP TABLE IF EXISTS GROUPE ;
CREATE TABLE GROUPE (NomGroupe_GROUPE CHAR(10) NOT NULL,
Nclasse_NIVEAU CHAR (10),
PRIMARY KEY (NomGroupe_GROUPE)) ENGINE=InnoDB;

DROP TABLE IF EXISTS SALLE ;
CREATE TABLE SALLE (NomSalle_SALLE CHAR(20) NOT NULL,
PRIMARY KEY (NomSalle_SALLE)) ENGINE=InnoDB;

DROP TABLE IF EXISTS JOUR ;
CREATE TABLE JOUR (NJour_JOUR CHAR(12) NOT NULL,
PRIMARY KEY (NJour_JOUR)) ENGINE=InnoDB;

DROP TABLE IF EXISTS NIVEAU ;
CREATE TABLE NIVEAU (Nclasse_NIVEAU CHAR(15) NOT NULL,
PRIMARY KEY (Nclasse_NIVEAU)) ENGINE=InnoDB;

DROP TABLE IF EXISTS COURS ;
CREATE TABLE COURS (HeureDebut_TRANCHE_HORAIRE CHAR(5) NOT NULL,
NJour_JOUR CHAR(12) NOT NULL,
NomSalle_SALLE CHAR(20) NOT NULL,
TypeMatiere_MATIERE CHAR(20) NOT NULL,
NomEleve_ELEVE CHAR(30) NOT NULL,
Type_TYPE_COURS CHAR(20) NOT NULL,
PRIMARY KEY (HeureDebut_TRANCHE_HORAIRE,
 NJour_JOUR,
 NomSalle_SALLE,
 TypeMatiere_MATIERE,
 NomEleve_ELEVE,
 Type_TYPE_COURS)) ENGINE=InnoDB;

ALTER TABLE ELEVE ADD CONSTRAINT FK_ELEVE_NomGroupe_GROUPE FOREIGN KEY (NomGroupe_GROUPE) REFERENCES GROUPE (NomGroupe_GROUPE);

ALTER TABLE MATIERE ADD CONSTRAINT FK_MATIERE_NomEnseignant_ENSEIGNANT FOREIGN KEY (NomEnseignant_ENSEIGNANT) REFERENCES ENSEIGNANT (NomEnseignant_ENSEIGNANT);
ALTER TABLE GROUPE ADD CONSTRAINT FK_GROUPE_Nclasse_NIVEAU FOREIGN KEY (Nclasse_NIVEAU) REFERENCES NIVEAU (Nclasse_NIVEAU);
ALTER TABLE COURS ADD CONSTRAINT FK_COURS_HeureDebut_TRANCHE_HORAIRE FOREIGN KEY (HeureDebut_TRANCHE_HORAIRE) REFERENCES TRANCHE_HORAIRE (HeureDebut_TRANCHE_HORAIRE);
ALTER TABLE COURS ADD CONSTRAINT FK_COURS_NJour_JOUR FOREIGN KEY (NJour_JOUR) REFERENCES JOUR (NJour_JOUR);
ALTER TABLE COURS ADD CONSTRAINT FK_COURS_NomSalle_SALLE FOREIGN KEY (NomSalle_SALLE) REFERENCES SALLE (NomSalle_SALLE);
ALTER TABLE COURS ADD CONSTRAINT FK_COURS_TypeMatiere_MATIERE FOREIGN KEY (TypeMatiere_MATIERE) REFERENCES MATIERE (TypeMatiere_MATIERE);
ALTER TABLE COURS ADD CONSTRAINT FK_COURS_NomEleve_ELEVE FOREIGN KEY (NomEleve_ELEVE) REFERENCES ELEVE (NomEleve_ELEVE);
ALTER TABLE COURS ADD CONSTRAINT FK_COURS_Type_TYPE_COURS FOREIGN KEY (Type_TYPE_COURS) REFERENCES TYPE_COURS (Type_TYPE_COURS);
